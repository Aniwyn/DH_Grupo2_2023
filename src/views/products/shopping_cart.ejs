<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
        <link rel="stylesheet" type="text/css" href="/styles/products/cart.css" />
</head>

<body>
   
    <%-include('../partials/header.ejs')%>

    <main>
        <div class="mycart-tittle">
            <i class="fa-solid fa-cart-shopping fa-2xl"> MYC<span id="offset">A</span>RT</i>
        </div>

        <ul class="hexagon-container">
            <% for(let i=0; i < BD.length; i++) { %>
                <%- include('../partials/card--hexagon', {data_item: BD[i]}) %>
            <% } %>
        </ul>

        <div class="resume-container">
            <div class="resume-container-tittle">
                RESUME
            </div>
            <div class="resume-container-body">
                <table>
                    <tbody>
                        <% for(let i=0; i < BD.length; i++) { %>
                            <tr>
                                <td><%= BD[i].name %></td>
                                <td><%= BD[i].price %></td>
                            </tr>
                        <% } %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td>TOTAL</td>
                            <td><%= BD.reduce((accumulator, currentPrice) => accumulator + currentPrice.price, 0).toFixed(2) %></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="resume-container-buttons">
                <button class="payment-btn">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    <i class="fa-solid fa-lock"></i>
                    Secure checkout
                </button>
            </div>
            <div class="discount-container">
                <input type="text" name="discount" id="discount">
                <label for="discount">Discount code </label>
            </div>
        </div>

        </div>

    </main>

    <!---------------------------- Footer ---------------------------->

    <%- include('../partials/footer.ejs') %>
</body>

</html>