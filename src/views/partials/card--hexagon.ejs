<li class="item">
    <div class="hexagon">
        <img src="<%= data_item.cover_image %>" alt="Portada">
        <div class="hexagon-price">$<%= data_item.price %></div>

        <select class="hexagon-count" name="cantidad">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <button class="hexagon-delete">
            <i class="fa-solid fa-trash"></i>
        </button>
    </div>
</li>